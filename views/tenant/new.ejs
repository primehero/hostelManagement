<% include ../partials/header %>

<% include ../partials/sidebar %>

<div class="col-md-9">
  <!-- NEW HOSTEL ROOM
  ==================================================-->
  <form method="POST" action="/tenant">
    <legend>Create New Tenant</legend>
    <div class="row">
      <div class="col-md-6">

        <!-- Hostel Mongoose Id -->
        <input name="room" type="hidden" value="<%= roomId %>">

        <div class="form-group">
          <input id="name" name="name" placeholder="Name"
            class="form-control">
        </div><!-- ./form-group -->

        <div class="form-group">
            <input id="adhaar" name="adhaar" type="text"
                placeholder="Adhaar Number" class="form-control">
        </div><!-- ./form-group -->

        <div class="form-group">
            <input id="addess" name="address" type="text"
                placeholder="Address" class="form-control">
        </div><!-- ./form-group -->

        <div class="form-group">
             <input id="phone" name="phone" type="text"
                placeholder="Phone Number" class="form-control">
        </div><!-- ./form-group -->

        <div class="form-group">
           <input type="submit" name="submit" value="submit" class="btn btn-primary">
        </div><!-- ./form-group -->

      </div><!-- ./col -->
    </div><!-- ./row -->
  </form><!-- ./new hostel form -->

</div><!-- ./col -->

<% include ../partials/footer %>
