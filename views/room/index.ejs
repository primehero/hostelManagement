<% include ../partials/header %>

<% include ../partials/sidebar %>

<div class="col-md-9">
  <table class="table">
    <thead>
      <tr>
        <th>Room Number</th>
        <th>Details</th>
      </tr>
    </thead>
    <tbody>
      <% rooms.forEach(function(room) { %>
      <tr>
        <td>
          <%= room.roomNumber %>
        </td>
        <!-- SHOW -->
        <td>
          <a class="btn btn-primary" href="/room/<%= room._id %>">
            Details
          </a>
        </td>
      </tr>
      <% }) %>
    </tbody>
  </table>
</div><!-- ./col -->


<% include ../partials/footer %>
